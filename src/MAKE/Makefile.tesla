# tesla = 16-proc SGI Onyx3, g++, no MPI, SGI FFTs

SHELL = /bin/sh
#.IGNORE:

# System-specific settings

# LINKFORT & FORTLIB settings can be blank if not using LAMMPS Fortran libs
# LINKGPU & GPULIB settings can be blank if not using LAMMPS gpu lib

include		Makefile.package

CC =		g++
CCFLAGS =	$(PKGINC) -O -I../STUBS -DFFT_SGI
DEPFLAGS =	-M
LINK =		g++
LINKFORT =	
LINKGPU =	
LINKFLAGS =	$(PKGPATH) $(LINKFORT) -O -L../STUBS $(LINKGPU)
USRLIB =	$(PKGLIB) -lmpi
FORTLIB =	
GPULIB =	
SYSLIB =	$(FORTLIB) -lm -lcomplib.sgimath $(GPULIB)
SIZE =		size

# Link rule

$(EXE):	$(OBJ)
	$(LINK) $(LINKFLAGS) $(OBJ) $(USRLIB) $(SYSLIB) -o $(EXE)
	$(SIZE) $(EXE)

# Compilation rules

%.o:%.cpp
	$(CC) $(CCFLAGS) -c $<

%.d:%.cpp
	$(CC) $(CCFLAGS) $(DEPFLAGS) $< > $@

# Individual dependencies

DEPENDS = $(OBJ:.o=.d)
include $(DEPENDS)

