# width of the wall
variable nwall equal 3

variable lwall equal ${nwall}*${dx}
variable rwall equal ${Lx}-${nwall}*${dx}

region   rwall block ${rwall} INF INF INF INF INF
group	 rwall region rwall
velocity rwall set                    0 ${wall_vel} 0
fix      rwall rwall setforce         0           0 0


region   lwall block INF ${lwall} INF INF INF INF
group	 lwall region lwall
velocity lwall set 0 0 0
fix      lwall lwall setforce         0 0 0

